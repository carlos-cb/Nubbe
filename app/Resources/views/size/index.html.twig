{% extends 'base.html.twig' %}

{% block body %}
    <h1>Size list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Sizename</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for size in sizes %}
            <tr>
                <td><a href="{{ path('size_show', { 'id': size.id }) }}">{{ size.id }}</a></td>
                <td>{{ size.sizeName }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('size_show', { 'id': size.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('size_edit', { 'id': size.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('size_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
