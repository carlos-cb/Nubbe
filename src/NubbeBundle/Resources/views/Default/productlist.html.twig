{% endblock %}

{% block body %}

    {% include 'NubbeBundle:Default:header.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-1 col-md-1 sidebar">
                {% include 'leftmenu.html.twig' %}
            </div>
            <div class="col-sm-9 col-sm-offset-1 col-md-9 col-md-offset-1 imglist">
            {% for product in products %}
                <div class='col-sm-6 col-md-4 col-lg-3 hover01'>
                    <a href="{{ path('nubbe_productdetail', { 'product': product.id }) }}">
                        <figure><img src="{{ asset('uploads/fotos/' ~ product.foto) }}" height="320px"></figure>
                    </a>
                    <div class="product-info">
                        {% if product.isNew %}
