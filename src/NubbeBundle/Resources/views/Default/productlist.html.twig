                        {% else %}
                            <br>
                        {% endif %}
                        <a class="" href="{{ path('nubbe_productdetail', { 'product': product.id }) }}">{{ product.productNameEs }}</a>
                        <div class="price _product-price"><span>{{ product.price }} EUR</span></div>
                    </div>
                </div>
            {% endfor %}
