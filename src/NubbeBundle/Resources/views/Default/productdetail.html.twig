{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/nubbe/css/productlist.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/nubbe/css/detalle.css') }}" />
{% endblock %}

{% block body %}

    {% include 'NubbeBundle:Default:header.html.twig' %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-1 col-md-1 sidebar">
                {% include 'leftmenu.html.twig' %}
            </div>
            <div class=" col-md-4 col-md-offset-2 imglist">
            {% for fotodetalle in color.fotodetalles %}
                <div class='col-sm-12 col-md-12 col-lg-12'>
                    <a href="{{ asset('uploads/fotos/' ~ fotodetalle.fotodetalle) }}" class="imgzoom" title="Detalle de Foto" target="_blank">
                        <img id="imgzoom" src="{{ asset('uploads/fotos/' ~ fotodetalle.fotodetalle) }}" height="750px">
                    </a>
                    <div class="product-info">
                        <br>
                        <a>{{ fotodetalle.descriptionEs }}</a>
                    </div>
                </div>
            {% endfor %}
            </div>

            <div class="col-sm-4 col-md-4 col-lg-4 purchase-column">
                <section class="product-detail-purchase" data-module="productDetail, productDetailScrollSpy">
                    <h1 class="product-name product-detail-product-name">{{ product.productNameEs }}</h1>
                    <div class="product-price product-detail-price">
                        <div class="price-column product-detail-price-column">
                            <!-- // BUGFIX GR-3357  PDP - Fix mixed currency signs -->
                            <span id="markedDown_full_Price" class="price">€ {{ product.price }}</span>
                        </div>
                    </div>
                    <div class="product-info-wrapper">
                        <div class="style-number-title">
                            Ref: <span> {{ product.code }}</span>
                        </div>
                        <div style="display: none" class="productid">{{ product.id }}</div>

                        <div class="product-style-selector">
                            <div class="row" style="text-align: center">
                            {% for color in product.colors %}
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <label class="_color">
                                        <a class="group" rel="gallery1" href="{{ path('nubbe_productdetail22') }}">
                                            <img src="{{ asset('uploads/fotos/' ~ color.colorFoto) }}" alt="{{ color.colorNameEs }}" height="80px">
                                        </a>
                                        <span class="color-description">{{ color.colorNameEs }}</span>
                                    </label>
                                </div>
                            {% endfor %}
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <label class="_color">
                                        <a class="group" rel="gallery1" href="">
                                            <img src="{{ asset('uploads/fotos/lan.jpg') }}" alt="" height="80px">
                                        </a>
                                        <span class="color-description">AZUL</span>
                                    </label>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <label class="_color">
                                        <a class="group" rel="gallery1" href="">
                                            <img src="{{ asset('uploads/fotos/hong.jpg') }}" alt="" height="80px">
                                        </a>
                                        <span class="color-description">ROJO</span>
                                    </label>
                                </div>
                                <div class="col-lg-3 col-md-3 col-sm-3">
                                    <label class="_color">
                                        <a class="group" rel="gallery1" href="{{ path('nubbe_productdetail22') }}">
                                            <img src="{{ asset('uploads/fotos/bai.jpg') }}" alt="" height="80px">
                                        </a>
                                        <span class="color-description">BLANCO</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class="save-help talla" data-module="tooltip">
                            <div class="selectric">
                                <p class="label">Tallas</p>
                            </div>
                            <div class="guia" style="width: auto;">
                                <div class="size-guide " style="">
                                    <a class="size-guide-link overlay-open" href="">
                                        Guía de Tallas</a>
                                </div>
                            </div>
                            <div class="table-responsive sizetable">
                                <div class="btn-group" data-toggle="buttons">
                                {% for size in product.sizes %}
                                    <label class="btn btn-default" style="width: {{ 300/product.sizes|length }}px">
                                        <input type="radio" name="options" id="option" autocomplete="off"> {{ size.sizeName }}
                                    </label>
                                {% endfor %}
                                </div>
                            </div>
                            <br><br><br>
                        </div>
                        <button class="shopping-bag-cta add-to-shopping-bag various" type="submit" id="buy" onclick="window.location.href='/cart'">
                            Añadir a Bolsa de Compras</button>
                        <div class="save-help guardar" data-module="tooltip">
                            <ul>
                                <li>
                                    <a class="save overlay-open main-product" href="" data-save-item="432489ZHZ813215"><i class="fa fa-heart-o" aria-hidden="true"></i> Guardar este artículo</a>
                                </li>

                                <li class="divider"></li>
                                <li>
                                    <a class="help  may-we-help fancybox" href="">¿Necesita ayuda?</a>
                                    <!-- <div id="tooltip-help" class="tooltip tooltip-help tooltip-mwh">
                                        <ul>
                                            <li class="email">
                                                <a class="overlay-open simple-tabs-opener" href="#may-we-help-overlay" data-simple-tab-open="tab3">
                                                    ENVIAR UN CORREO ELECTRÓNICO</a>
                                            </li>
                                            <li class="chat">
                                        <a class="overlay-open simple-tabs-opener" href="#may-we-help-overlay" data-simple-tab-open="tab1">LIVE CHAT</a>
                                    </li>
                                        </ul>
                                    </div>-->
                                </li>
                            </ul>
                        </div>
                        <div class="product-details-nav">
                            <ul>
                                <li>
                                    <a class="product-details-nav-product-details" href="#">
                                        Detalles del producto</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>
            </div>

        </div>
    </div>

    {% include 'NubbeBundle:Default:footer.html.twig' %}
{% endblock %}