{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/nubbe/css/orderinfo.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/nubbe/css/cart.css') }}" />
{% endblock %}

{% block body %}
    {% include 'NubbeBundle:Default:header.html.twig' %}

    <br><br><br>
    <div class="container" style="min-height:400px;">

        <div class="box col-md-6 col-lg-6" style="text-align: center;display: inline-block;position: relative; top: 100px;">
            <img src="{{ asset('bundles/nubbe/img/failed.jpg') }}">
        </div>
        <div class="box col-md-6 col-lg-6" style="display: inline-block;margin-top: 30px">
            <h3 class="box"><b>Lo siento, error de autenticacion tarjeta de crédito.</b></h3>
            <h4>Entre "Mis pedidos" y vuelva a realizar el pago, por favor.</h4>
            <br><br><br>
            <h4>Nombre de Cliente: {{ orderInfo.receiverFamilyName }} {{ orderInfo.receiverName }}</h4>
            <h4>Número de Pedido: {{ orderInfo.id }}</h4>
            <h4>Importe Total: {{ orderInfo.totalPrice|number_format(2, '.', ',') }} €</h4>
            <h4>Tiempo de Generación: {% if orderInfo.orderDate %}{{ orderInfo.orderDate|date('Y-m-d H:i:s') }}{% endif %}</h4>
            <br>
            <a href="{{ path('nubbe_pedido') }}" class="button button-rounded button-inverse">Ver mis pedidos</a>
        </div>

    </div>

    {% include 'NubbeBundle:Default:footer.html.twig' %}
{% endblock %}
